@{
}

@model List<StudentPortal.Web.Models.Entities.Student>
<h1>Students</h1>
<h3>
    <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Add">Add Students</a>
</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.ID</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.ID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
